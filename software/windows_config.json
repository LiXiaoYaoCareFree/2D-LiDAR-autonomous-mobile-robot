{
  "communication": {
    "port": "auto",
    "baudrate": 921600,
    "timeout": 1.0,
    "retry_count": 3,
    "auto_detect_port": true
  },
  "sensor": {
    "lidar_max_range": 3.0,
    "lidar_min_range": 0.1,
    "lidar_quality_threshold": 10,
    "imu_weight": 0.7,
    "encoder_weight": 0.3,
    "wheel_base": 0.165
  },
  "mapping": {
    "map_bounds": [-5, -5, 5, 5],
    "map_resolution": 0.03,
    "l_free": -0.4,
    "l_occ": 0.85,
    "l_min": -4.0,
    "l_max": 4.0,
    "hit_margin": 0.001
  },
  "navigation": {
    "robot_radius": 0.15,
    "lookahead_distance": 0.3,
    "max_linear_vel": 0.3,
    "max_angular_vel": 2.0,
    "k_angular": 1.8,
    "k_avoid": 1.2,
    "avoid_radius": 0.35,
    "goal_tolerance": 0.1
  },
  "controller_type": "dwa",
  "visualization": {
    "figsize": [16, 12],
    "layout": "2x2",
    "update_interval": 0.1,
    "save_images": false,
    "image_dir": "images"
  },
  "log_level": "INFO",
  "data_logging": true,
  "log_dir": "logs",
  "max_log_size": 100,
  "windows_optimizations": {
    "matplotlib_backend": "TkAgg",
    "thread_priority": "high",
    "buffer_size": 8192,
    "connection_health_check": true,
    "auto_reconnect": true
  }
}
